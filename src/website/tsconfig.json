{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "esnext",
    "isolatedModules": false,
    "jsx": "react",
    "allowJs": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": false,
    "strict": true,
    "lib": [ "es6", "dom" ],
    "types": [ "webpack-env", "jest" ]
  },
  "exclude": [
    "bin",
    "node_modules"
  ]
}
